# Incluir arquivos de documentação
include README.md
include LICENSE
include CHANGELOG.md
include ENTRYPOINT.md

# Incluir script de entrypoint
include entrypoint.sh

# Incluir arquivos de configuração
include pyproject.toml
include setup.py
include setup.cfg

# Incluir arquivos de testes
recursive-include tests *.py
recursive-include tests *.txt
recursive-include tests *.json

# Incluir arquivos de exemplo
recursive-include examples *.py
recursive-include examples *.md
recursive-include examples *.txt

# Incluir arquivos de configuração do projeto
include .gitignore
include .flake8
include .pylintrc
include mypy.ini

# Incluir arquivos de documentação Sphinx
recursive-include docs *.rst
recursive-include docs *.md
recursive-include docs *.txt
recursive-include docs Makefile

# Incluir arquivos de template (se houver)
recursive-include django_coralogix_otel/templates *.html
recursive-include django_coralogix_otel/templates *.txt

# Incluir arquivos estáticos (se houver)
recursive-include django_coralogix_otel/static *.css
recursive-include django_coralogix_otel/static *.js
recursive-include django_coralogix_otel/static *.png
recursive-include django_coralogix_otel/static *.jpg

# Excluir arquivos desnecessários
global-exclude *.pyc
global-exclude *.pyo
global-exclude *.pyd
global-exclude .DS_Store
global-exclude __pycache__
global-exclude *.so
global-exclude .coverage
global-exclude .cache
global-exclude .pytest_cache
global-exclude .mypy_cache
global-exclude .tox
global-exclude build
global-exclude dist
global-exclude *.egg-info